# General
ENV=dev
LOG_LEVEL=INFO
EXCHANGES=alpaca,kraken

# Alpaca (use paper for testing unless youâ€™re funded live)
ALPACA_API_KEY=
ALPACA_API_SECRET=
ALPACA_BASE_URL=https://paper-api.alpaca.markets

# Kraken
KRAKEN_API_KEY=
KRAKEN_API_SECRET=

# (Optional legacy names; CLI will read these if set)
ARBIT_API_KEY=
ARBIT_API_SECRET=

# Strategy
NOTIONAL_PER_TRADE_USD=200
NET_THRESHOLD_BPS=10
# Optional: override CCXT maker/taker fees per symbol (basis points JSON)
# FEE_OVERRIDES={"kraken":{"ETH/USDT":{"taker_bps":0,"maker_bps":0}}}
MAX_SLIPPAGE_BPS=8
MAX_OPEN_ORDERS=3
DRY_RUN=true
RESERVE_AMOUNT_USD=0
RESERVE_PERCENT=0

# Observability / storage
PROM_PORT=9109
SQLITE_PATH=./data/arbit.db
DISCORD_WEBHOOK_URL=
# Discord notification toggles
# Periodic heartbeat from `live` (in seconds; 0 disables)
DISCORD_HEARTBEAT_SECS=60
# Notify on executed trades (default: false)
DISCORD_TRADE_NOTIFY=false
# Notify on actionable skips (slippage/min_notional; default: true)
DISCORD_SKIP_NOTIFY=true
# Notify on errors (aggregated; default: false)
DISCORD_ERROR_NOTIFY=false
# Notify at live start/stop (default: true)
DISCORD_LIVE_START_NOTIFY=true
DISCORD_LIVE_STOP_NOTIFY=true
# Minimum seconds between Discord notifications (rate limit; default: 10)
DISCORD_MIN_NOTIFY_INTERVAL_SECS=10

# Advanced: Override default triangles per venue (JSON, single line)
# TRIANGLES_BY_VENUE={"kraken":[["ETH/USDT","ETH/BTC","BTC/USDT"],["SOL/USDT","SOL/BTC","BTC/USDT"]],"alpaca":[["ETH/USDC","ETH/BTC","BTC/USDC"]]}

# Hybrid cross-venue (read-only) tips:
# - Use the `hybrid` command to estimate net% across venues without trading.
#   Example: python -m arbit.cli hybrid --legs "SOL/USDT,SOL/BTC,BTC/USDT" \
#            --venues "SOL/USDT=kraken,SOL/BTC=kraken,BTC/USDT=alpaca" --secs 15
